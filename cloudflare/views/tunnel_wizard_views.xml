<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cloudflare_tunnel_wizard_form" model="ir.ui.view">
        <field name="name">cloudflare.tunnel.wizard.form</field>
        <field name="model">cloudflare.tunnel.wizard</field>
        <field name="arch" type="xml">
            <form string="Tunnel Setup">
                <sheet>
                    <div class="alert alert-success" role="alert">
                        <strong>Success!</strong> A new Cloudflare Tunnel has been provisioned at the edge. Run the following command on your local server to connect the daemon:
                    </div>
                    <group>
                        <field name="command" widget="text" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
