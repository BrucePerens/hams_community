<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cloudflare_waf_rule_list" model="ir.ui.view">
        <field name="name">cloudflare.waf.rule.list</field>
        <field name="model">cloudflare.waf.rule</field>
        <field name="arch" type="xml">
            <list string="WAF Rulesets">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="action"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="website_id" groups="website.group_multi_website" optional="show"/>
                <field name="description" optional="show"/>
            </list>
        </field>
    </record>
    <record id="view_cloudflare_waf_rule_form" model="ir.ui.view">
        <field name="name">cloudflare.waf.rule.form</field>
        <field name="model">cloudflare.waf.rule</field>
        <field name="arch" type="xml">
            <form string="WAF Rule">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. Block Legacy XML-RPC"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="action"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="website_id" groups="website.group_multi_website"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Expression &amp; Logic">
                            <field name="expression" widget="text"/>
                        </page>
                        <page string="Documentation / Comments">
                            <field name="description" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_cf_waf_rule" model="ir.actions.act_window">
        <field name="name">WAF Rulesets</field>
        <field name="res_model">cloudflare.waf.rule</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_cf_waf_rules" name="WAF Rulesets" parent="menu_cloudflare_root" action="action_cf_waf_rule" sequence="20"/>
</odoo>
