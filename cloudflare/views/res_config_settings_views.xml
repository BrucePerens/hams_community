<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_cloudflare" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cloudflare</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside"> <!-- audit-ignore-xpath: Tested by [%ANCHOR: test_xpath_rendering_settings] -->
                <div class="app_settings_block" data-string="Cloudflare" data-key="cloudflare">
                    <h2>Cloudflare Edge Orchestration</h2>
                    <div class="row mt16 o_settings_container" id="cloudflare_edge_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="cloudflare_edge_waf">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Bot Management</span>
                                <div class="text-muted">
                                    The module automatically injects cache headers and manages the background URL purge queue. 
                                    You can manually trigger the deployment of the Verified Bot WAF Ruleset to your Cloudflare zone here.
                                </div>
                                <div class="mt8">
                                    <button name="action_deploy_cf_waf" type="object" string="Deploy Verified Bot WAF Rules" class="btn-primary" icon="fa-shield"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="cloudflare_edge_turnstile">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Turnstile Configuration</span>
                                <div class="text-muted">
                                    Provide the Secret Key to enable backend validation of invisible CAPTCHA tokens for public forms.
                                </div>
                                <div class="mt8">
                                    <field name="cloudflare_turnstile_secret" class="w-100" password="True" placeholder="0x4A..."/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
