<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_cloudflare" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cloudflare</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="user_websites.res_config_settings_view_form_inherit_user_websites"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='user_websites']/div[hasclass('o_settings_container')]" position="inside"> <!-- audit-ignore-xpath: Tested by [%ANCHOR: test_all_xpaths_render] -->
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Cloudflare Edge Orchestration</span>
                        <div class="text-muted">
                            The platform automatically injects cache headers and manages the background URL purge queue. 
                            You can manually trigger the deployment of the Verified Bot WAF Ruleset to your Cloudflare zone here.
                        </div>
                        <div class="mt8">
                            <button name="action_deploy_cf_waf" type="object" string="Deploy Verified Bot WAF Rules" class="btn-primary" icon="fa-shield"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
