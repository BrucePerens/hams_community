<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_cloudflare" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cloudflare</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//form" position="inside"> 
                <div class="app_settings_block" data-string="Cloudflare" data-key="cloudflare">
                    <h2>Cloudflare Edge Orchestration</h2>
                    <div class="row mt16 o_settings_container" id="cloudflare_edge_container">
                        
                        <div class="col-12 col-lg-6 o_setting_box" id="cloudflare_edge_credentials">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">API Credentials</span>
                                <div class="text-muted">
                                    Set the API Token, Zone ID, and Account ID specifically for this website. (Overrides fallback .env vars)
                                </div>
                                <div class="mt8">
                                    <field name="cloudflare_api_token" password="True" placeholder="Bearer Token..."/>
                                </div>
                                <div class="mt8">
                                    <field name="cloudflare_zone_id" placeholder="32-character Zone ID..."/>
                                </div>
                                <div class="mt8">
                                    <field name="cloudflare_account_id" placeholder="32-character Account ID..."/>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="cloudflare_edge_waf">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">WAF Management</span>
                                <div class="text-muted">
                                    Push local WAF rules to Cloudflare or pull existing rules from the edge.
                                </div>
                                <div class="mt8 d-flex gap-2">
                                    <button name="action_deploy_cf_waf" type="object" string="Push to Edge" class="btn-primary" icon="fa-cloud-upload"/>
                                    <button name="action_pull_cf_waf" type="object" string="Pull from Edge" class="btn-secondary" icon="fa-cloud-download"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="cloudflare_edge_tunnel">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Zero Trust Tunnels (cloudflared)</span>
                                <div class="text-muted">
                                    Automatically provision a secure Cloudflare Tunnel to expose your local instance without opening firewall ports.
                                </div>
                                <div class="mt8">
                                    <button name="action_generate_tunnel_command" type="object" string="Generate Setup Command" class="btn-primary" icon="fa-terminal"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="cloudflare_edge_turnstile">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Turnstile Configuration</span>
                                <div class="text-muted">
                                    Provide the Secret Key to enable backend validation of invisible CAPTCHA tokens for public forms.
                                </div>
                                <div class="mt8">
                                    <field name="cloudflare_turnstile_secret" class="w-100" password="True" placeholder="0x4A..."/>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
