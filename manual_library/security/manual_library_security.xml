<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="module_category_manual_library">
            <field name="name">Manual Library</field>
            <field name="description">Access rights for the Manual Library.</field>
            <field name="sequence">50</field>
        </record>

        <record model="res.groups.privilege" id="privilege_manual_library">
            <field name="name">Manual Access</field>
            <field name="category_id" ref="module_category_manual_library"/>
        </record>

       <record id="group_manual_manager" model="res.groups">
            <field name="name">Manual Administrator</field>
            <field name="privilege_id" ref="privilege_manual_library"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <record id="group_manual_library_service_account" model="res.groups">
            <field name="name">Service Account: Manual Library System</field>
        </record>
        
        <record id="user_manual_library_service_account" model="res.users">
            <field name="name">Manual Library System</field>
            <field name="login">manual_library_sys</field>
            <field name="active" eval="True"/>
            <field name="groups_id" eval="[(6, 0, [ref('manual_library.group_manual_library_service_account')])]"/>
        </record>

        <record id="knowledge_article_admin_rule" model="ir.rule">
            <field name="name">Knowledge Article Admin</field>
            <field name="model_id" ref="model_knowledge_article"/>
            <field name="groups" eval="[(4, ref('manual_library.group_manual_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="knowledge_article_internal_read_rule" model="ir.rule">
            <field name="name">Knowledge Article Internal Read</field>
            <field name="model_id" ref="model_knowledge_article"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">['|', '|', ('internal_permission', '!=', 'none'), ('create_uid', '=', user.id), ('member_ids', 'in', user.ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="knowledge_article_public_read_rule" model="ir.rule">
            <field name="name">Knowledge Article Public Read</field>
            <field name="model_id" ref="model_knowledge_article"/>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="domain_force">[('is_published', '=', True)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
