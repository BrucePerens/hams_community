<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="menu_manual_library_root" 
              name="Manuals" 
              web_icon="manual_library,static/description/icon.png"
              sequence="110"/>

    <record id="view_knowledge_article_tree" model="ir.ui.view">
        <field name="name">knowledge.article.list</field>
        <field name="model">knowledge.article</field>
        <field name="arch" type="xml">
            <list string="Articles">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="internal_permission"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>

    <record id="view_knowledge_article_form" model="ir.ui.view">
        <field name="name">knowledge.article.form</field>
        <field name="model">knowledge.article</field>
        <field name="arch" type="xml">
            <form string="Article">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="is_published" widget="website_redirect_button"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="icon" class="me-2" placeholder="emoji" style="width: 3em;"/>
                            <field name="name" placeholder="Article Title..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="internal_permission"/>
                        </group>
                        <group>
                            <field name="member_ids" widget="many2many_tags" invisible="internal_permission != 'none'"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content" name="body_page">
                            <field name="body" widget="html" options="{'style-inline': true}"/>
                        </page>
                        <page string="Sub-Articles" name="children_page">
                            <field name="child_ids" readonly="1">
                                <list string="Sub-Articles">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="is_published"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_knowledge_article" model="ir.actions.act_window">
        <field name="name">Articles</field>
        <field name="res_model">knowledge.article</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Manual Article!
            </p>
            <p>
                Build a hierarchical knowledge base by nesting articles under parents.
            </p>
        </field>
    </record>

    <menuitem id="menu_knowledge_articles"
              name="Articles"
              parent="menu_manual_library_root"
              action="action_knowledge_article"
              sequence="10"/>
</odoo>
